<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:id="@+id/root"
    tools:context=".view.DetailsActivity">

    <ImageView
        android:id="@+id/movie_imageD"
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_titleD"
        android:layout_width="169dp"
        android:layout_height="156dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/movie_title_here"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/movie_imageD"
        app:layout_constraintEnd_toEndOf="@+id/movie_imageD"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/movie_imageD"
        app:layout_constraintTop_toTopOf="@+id/movie_imageD"
        app:layout_constraintVertical_bias="0.834" />

    <TextView
        android:id="@+id/movie_yearD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="286dp"
        android:text="@string/move_year"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/movie_imageD"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/movie_titleD"
        app:layout_constraintTop_toTopOf="@+id/movie_imageD" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_imageD">

        <TextView
            android:id="@+id/movie_detailsD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sampleDes"
            android:textColor="@color/textColor"
            android:textSize="20sp" />
    </ScrollView>

    <TextView
        android:id="@+id/movie_ratingD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/movie_rate"
        android:textColor="@color/textColor"
        app:drawableLeftCompat="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toEndOf="@+id/movie_titleD"
        app:layout_constraintTop_toBottomOf="@+id/movie_yearD" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryD"
        android:layout_width="306dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/movie_imageD"
        app:layout_constraintEnd_toEndOf="@+id/movie_imageD"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/movie_imageD"
        app:layout_constraintTop_toBottomOf="@+id/movie_titleD"
        tools:listitem="@layout/activity_details_category" />

</androidx.constraintlayout.widget.ConstraintLayout>